                $('#submit_lang').popover({

                    placement:"top",
                    trigger  :"manual",
                    title    :translations['status'],
                    content  :translations['update.success']

                });


                $('#submit_lang').popover('show');


                setTimeout(function () {
                    $('#submit_lang').popover('hide');
                }, 4000);

                 */
            }

        });
    }


</script>

{% endblock body %}
